#include <iostream>
#include <cmath>
using namespace std;



float diameter(float r){
float d;
d=2*r;
return (d);
}
float circumference(float r){
float c;
c=2*3.14*r;
return (c);}
float area(float r){
float a;
a=3.14*r*r;
return (a);
}

int main ()
{
float r,d,c,a;
cout<<"enter radius of circle";
cin>>r;
d=2*r;
c=2*3.14*r;
a=3.14*r*r;
cout<<"diameter of a circle"<<d<<"circumference of a circle"<<c<<"area of a circle"<<a;
return 0;
}
