#include <iostream>
using namespace std;

float d (float r)
{float di=2*r;
return di;}
float c (float r)
{float cr=2*3.14*r;
return cr;}
float a (float r)
{float ar=3.14*r*r;
return ar;}

int main() 
{ float r, d, c, a;
cout<<"/n /enter radius of the circle:";
cin>>r;
d=2*r;
c=2*3.14*r;
a=3.14*r*r;
cout<<"/n /diameter of the circle:"<<d<<"/n /circumference of the circle:"<<c<<"/n /area of the circle:"<<a;
	
	return 0;
}
